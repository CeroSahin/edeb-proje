<body>
    <div class="main">
  <% allArticles.forEach(function(article) { %>
    <div class="articlebox">
        <h1><%=article.title%></h1>
        <p><%=article.content.substring(0,article.content.indexOf(".")+1)%></p>
        <a href="/makale/<%=article.id%>"><button type="button" class="btn btn-dark">Okuyalım!</button></a>
    </div>
  <% }) %>
</div>
</body>

